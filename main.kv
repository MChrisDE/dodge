#: import FadeTransition kivy.uix.screenmanager.FadeTransition
<Player>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<UPDOWNRocket>:
    canvas:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
<LEFTRIGHTRocket>:
    canvas:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
<SideBoard>:
    canvas:
        Color:
            rgb: (0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<Game>:
    player: player
    ud_rocket: ud_rocket
    lr_rocket: lr_rocket
    sideboard: sideboard
    Player
        pos: root.width/2, root.height/2
        size_hint: (.036, .064)
        id:player
    UPDOWNRocket:
        size_hint:(0.025, 0.41)
        id:ud_rocket
        pos: (0, -self.size[1])
    LEFTRIGHTRocket:
        size_hint:(0.234375, 0.0462)
        id:lr_rocket
        pos: (-self.size[0], 0)
    SideBoard:
        pos: (root.width*(0.78125), 0)
        size_hint: (root.width, root.height)
        id: sideboard
        Button:
            pos: (root.width*(0.78125), 0)
            text: "Quit"
            on_press: app.stop()
            size: (root.width*(1-0.78125), root.height*0.25)
            font_size: 50
        Button:
            pos: (root.width*(0.78125), root.height*0.25)
            text: "Restart"
            on_press: root.reset()
            size: (root.width*(1-0.78125), root.height*0.25)
            font_size: 50
