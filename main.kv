<Player>:
    size: (50, 50)
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<UPDOWNRocket>:
    size: (50, 450)
    canvas:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
<LEFTRIGHTRocket>:
    size: (450, 50)
    canvas:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
<SideBoard>:
    canvas:
        Color:
            rgb: (0, 0, 1)
        Rectangle:
            pos: (1500, 0)
            size: (root.width, root.height)
    Label:
        pos: (root.x+50,0)
        text: "hits: " + str(root.hits)
<GameScreen>:
    player: player
    ud_rocket: ud_rocket
    lr_rocket: lr_rocket
    sideboard: sideboard
    FloatLayout:
        Player
            size_hint:(None, None)
            id:player
        UPDOWNRocket:
            size_hint:(None, None)
            id:ud_rocket
            pos: (0, -450)
        LEFTRIGHTRocket:
            size_hint:(None, None)
            id:lr_rocket
            pos: (-450, 0)
        SideBoard:
            pos: (1500,0)
            size_hint: (root.width, root.height)
            id: sideboard



