<Player>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<UPDOWNRocket>:
    canvas:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
<LEFTRIGHTRocket>:
    canvas:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
<SideBoard>:
    canvas:
        Color:
            rgb: (0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        pos: (root.x + 50, root.y)
        text: "hits: " + str(root.hits)
<GameScreen>:
    player: player
    ud_rocket: ud_rocket
    lr_rocket: lr_rocket
    sideboard: sideboard
    Player
        size_hint: (.036, .064)
        id:player
    UPDOWNRocket:
        size_hint:(0.025, 0.41)
        id:ud_rocket
        pos: (0, -self.size[1])
    LEFTRIGHTRocket:
        size_hint:(0.234375, 0.0462)
        id:lr_rocket
        pos: (-self.size[0], 0)
    SideBoard:
        pos: (root.width*(0.78125), 0)
        size_hint: (root.width, root.height)
        id: sideboard



